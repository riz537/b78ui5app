<mvc:View controllerName="com.demo.b78sapui5.controller.View1"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core">
  <Page title="I am View1">
    <content>
    
      <Panel headerText="Filter/Sort Employees" expandable="true"  expanded="false" class="sapUiSmallMarginBeginEnd" width="auto">
        <f:SimpleForm editable="true" columnsL="3" columnsM="3" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="0" emptySpanM="0">
          <f:content>
            <core:Title text="Filters"></core:Title>
            <Label text="Employee Id"></Label>
            <Input id="oIpEmpId" showValueHelp="true" valueHelpRequest="onPressF4Help"></Input>
            <Label text="Name"></Label>
            <Input id="oIpName" ></Input>

            <core:Title text="Sort"></core:Title>
            <Label text="Sort field"></Label>
            <ComboBox id="oCBSortField">
              <items>
                 <core:Item text="Employee Id" key="Empid"></core:Item>
                 <core:Item text="Name" key="Name"></core:Item>
              </items>
            </ComboBox>
            <Label text="Sort Order"></Label>
            <RadioButtonGroup id="oRBGSortOrder" selectedIndex="-1" columns="2">
               <buttons>
                 <RadioButton text="Ascending"></RadioButton>
                 <RadioButton text="Descending"></RadioButton>
               </buttons>
            </RadioButtonGroup>

            <core:Title text="Grouping"></core:Title>
             <Label text="Group field"></Label>
            <ComboBox id="oCBGroupField">
              <items>
                 <core:Item text="Skill" key="Skill"></core:Item>
                 <core:Item text="Designation" key="Desig"></core:Item>
              </items>
            </ComboBox>
            <Label text="Group Order"></Label>
            <RadioButtonGroup id="oRBGGroupOrder" selectedIndex="-1" columns="2">
               <buttons>
                 <RadioButton text="Ascending"></RadioButton>
                 <RadioButton text="Descending"></RadioButton>
               </buttons>
            </RadioButtonGroup>

          </f:content>
        </f:SimpleForm>
        <FlexBox justifyContent="End">
          <Button text="Go" icon="sap-icon://accept" type="Emphasized" class="sapUiTinyMarginEnd" press="onPressGo"></Button>
          <Button text="Reset"  icon="sap-icon://reset" type="Reject" press="onPressReset"></Button>
        </FlexBox>
      </Panel>



      <Table id="oTabEmp" items="{oModel>/EmployeeSet}" mode="SingleSelectLeft" class="sapUiSmallMarginBeginEnd" width="auto">
        <headerToolbar>
          <Toolbar >
            <Title text="Employee List"></Title>
            <ToolbarSpacer ></ToolbarSpacer>
          </Toolbar>

        </headerToolbar>
        <columns>
          <Column>
            <Text text="Employee Id"></Text>
          </Column>
          <Column >
            <Text text="Name"></Text>
          </Column>
          <Column >
            <Text text="Designation"></Text>
          </Column>
          <Column >
            <Text text="Skill"></Text>
          </Column>
          <Column >
            <Text text="Status"></Text>
          </Column>
          <Column >
            <Text text="Rating"></Text>
          </Column>
        </columns>
        <items>
          <ColumnListItem type="Navigation" press="onPressRow">
            <Text text="{oModel>Empid}"></Text>
            <Text text="{oModel>Name}"></Text>
            <Text text="{oModel>Desig}"></Text>
            <Text text="{oModel>Skill}"></Text>
            <ObjectStatus text="{oModel>Status}" state="{path:'oModel>Status',formatter:'.f.formatStatus'}" inverted="true"></ObjectStatus>
            <Text text="{path:'oModel>Rating',formatter:'.f.formatRating'}"></Text>
          </ColumnListItem>
        </items>
      </Table>
      

