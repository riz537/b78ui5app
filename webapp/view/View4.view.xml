<mvc:View controllerName="com.demo.b78sapui5.controller.View4"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Page title="I am View4" showNavButton="true" navButtonPress="onNavBack">
    <content>
      <f:SimpleForm title="Employee Details" editable="true" layout="ResponsiveGridLayout"
      labelSpanL="2" labelSpanM="2" emptySpanL="6" emptySpanM="6">
        <f:content>
          <Label text="Employee Id"></Label>
          <Input id="oIpEmpId" value="{oModel>Empid}" enabled="false"></Input>
          <Label text="Name"></Label>
          <Input id="oIpName" value="{oModel>Name}"></Input>
          <Label text="Deisgnation"></Label>
          <Input id="oIpDesig" value="{oModel>Desig}"></Input>
          <Label text="Skill" ></Label>
          <Input id="oIpSkill" value="{oModel>Skill}"></Input>
          <Label text="Email"></Label>
          <Input id="oIpEmail" value="{oModel>Email}"></Input>
          <Label text="Status"></Label>
          <Input id="oIpStatus" value="{oModel>Status}"></Input>
          <Label text="Salary"></Label>
          <Input id="oIpSalary" value="{oModel>Salary}"></Input>
          <Label text="Rating"></Label>
          <Input id="oIpRating" value="{oModel>Rating}"></Input>
        </f:content>
      
      </f:SimpleForm>

    </content>
    <footer>
      <Bar >
        <contentRight>
           <Button text="Save" icon="sap-icon://save" press="onPresSave"></Button>
        </contentRight>
      </Bar>
    </footer>
    </Page>
</mvc:View>